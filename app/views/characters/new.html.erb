<section>
  <h1>New Character</h1>

  <%= form_for :character, url: characters_path do |f| %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :bio %><br />
      <%= f.text_area :bio %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>
</section>
