<section>
  <h1>Edit Character</h1>

  <div class="character-form">
    <%= form_for @character do |f| %>
      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </p>

      <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :bio %><br />
        <%= f.text_area :bio %>
      </p>

      <p>
        <%= f.label :image %><br />
        <%= f.text_field :image %>
      </p>

      <p>
        <%= f.submit %>
      </p>

    <% end %>
  </div>

  <%= link_to 'Delete', character_path(@character), method: :delete, class: 'edit' %>

</section>
